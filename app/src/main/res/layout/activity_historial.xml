<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tv_title_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del Historial"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/blue_dark_background"
        android:layout_marginBottom="24dp" />

    <!-- EditText to input Historial ID -->
    <EditText
        android:id="@+id/et_historial_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del Historial"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/blue_f_light"
        android:textColor="@color/blue_dark_background"/>

    <!-- Button to search for Historial by ID -->
    <Button
        android:id="@+id/btn_buscar_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Historial por ID"
        android:textColor="@color/blue_text"
        android:backgroundTint="@color/blue_primary"
        android:layout_marginBottom="16dp" />

    <!-- Button to show all Historials -->
    <Button
        android:id="@+id/btn_mostrar_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Todos los Historiales"
        android:textColor="@color/blue_text"
        android:backgroundTint="@color/blue_primary"
        android:layout_marginBottom="24dp" />

    <!-- ScrollView for Historial details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <!-- TableLayout to display Historial details -->
        <TableLayout
            android:id="@+id/tbl_historial_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Table Row for Headers -->
            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Aula"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="@color/gray_primary"
                    android:textColor="@color/blue_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Categ."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="@color/gray_primary"
                    android:textColor="@color/blue_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Componente"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="@color/gray_primary"
                    android:textColor="@color/blue_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Fecha"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="@color/gray_primary"
                    android:textColor="@color/blue_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Hora"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="@color/gray_primary"
                    android:textColor="@color/blue_text" />
            </TableRow>

            <!-- Example Row for Historial details, this will be dynamically populated -->
            <!-- Add rows dynamically here -->

        </TableLayout>
    </ScrollView>

    <!-- Button to go back -->
    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:textColor="@color/blue_text"
        android:backgroundTint="@color/blue_primary" />

</LinearLayout>

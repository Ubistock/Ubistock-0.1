<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_main">

    <!-- Barra de título con imagen mejorada -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:title="Menú"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logoprinci"
            android:contentDescription="logo"
            android:padding="8dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Espacio debajo de la barra de título -->
    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Historial -->
    <Button
        android:id="@+id/historialButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:elevation="2dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="24dp" />

    <!-- Layout para los botones Añadir -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historialButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="24dp">

        <!-- Botón Añadir Aula -->
        <Button
            android:id="@+id/anadirAulaButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Añadir Aula"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorSecondary"
            android:elevation="2dp"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/anadirCategoriaButton"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.48"/>

        <!-- Botón Añadir Categoría -->
        <Button
            android:id="@+id/anadirCategoriaButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Añadir Categoría"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorSecondary"
            android:elevation="2dp"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/anadirAulaButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.48"/>

        <!-- Botón Añadir Propietario -->
        <Button
            android:id="@+id/anadirPropietarioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Añadir Propietario"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorSecondary"
            android:elevation="2dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/anadirAulaButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/anadirPuestoButton"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.48"/>

        <!-- Botón Añadir Puesto -->
        <Button
            android:id="@+id/anadirPuestoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Añadir Puesto"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorSecondary"
            android:elevation="2dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/anadirCategoriaButton"
            app:layout_constraintStart_toEndOf="@id/anadirPropietarioButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.48"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
